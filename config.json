{
    "camera": {
        "device_id": 0,
        "width": 1280,
        "height": 720,
        "fps": 30
    },
    "hand_tracking": {
        "max_hands": 1,
        "min_detection_confidence": 0.7,
        "min_tracking_confidence": 0.7,
        "model_complexity": 0
    },
    "gesture": {
        "pinch_threshold": 0.05,
        "fist_threshold": 0.1,
        "stability_time": 0.15,
        "submit_hold_time": 0.5,
        "clear_hold_time": 0.8,
        "smoothing_window": 5
    },
    "canvas": {
        "default_brush_thickness": 8,
        "default_color": [255, 255, 255],
        "eraser_size": 30
    },
    "generation": {
        "backend": "huggingface_inference",
        "model_id": "stabilityai/stable-diffusion-2-1",
        "default_style": "digital_art",
        "target_size": [512, 512],
        "guidance_scale": 7.5,
        "num_inference_steps": 30
    },
    "output": {
        "save_directory": "output",
        "auto_save_generated": true,
        "image_format": "png"
    }
}
